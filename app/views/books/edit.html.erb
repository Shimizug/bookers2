<h2>Editing book </h2>
<%= form_with model:@book, url: update_book_path(@book.id), method :patch do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"Title"%>
  <label for="inputOption">Option</label>
  <%= f.text_area :body, id:"inputOption", placeholder:"option"%>
  <%= f.submit "変更を保存" %>
<% end %>